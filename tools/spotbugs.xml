<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter
        xmlns="https://github.com/spotbugs/filter/3.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">

    <Match>
        <Class name="com.github.kyriosdata.add.contrato.Servico"/>
        <Method name="getUrlsFromJarsInDirectory" />
        <Bug pattern="PATH_TRAVERSAL_IN" />
    </Match>

    <Match>
        <Class name="com.github.kyriosdata.add.contrato.Servico"/>
        <Method name="newInstance" />
        <Bug pattern="URLCONNECTION_SSRF_FD" />
    </Match>

    <Match>
        <Class name="com.github.kyriosdata.add.contrato.IoUtils"/>
        <Method name="createDirOnTmpDir" />
        <Bug pattern="PATH_TRAVERSAL_IN" />
    </Match>

    <Match>
        <Class name="com.github.kyriosdata.add.manager.ResolucaoCache"/>
        <Method name="persiteEmDiretorioTemporario" />
        <Bug pattern="PATH_TRAVERSAL_IN" />
    </Match>

    <Match>
        <Class name="com.github.kyriosdata.add.api.LaudoController"/>
        <Bug pattern="SPRING_ENDPOINT" />
    </Match>

    <Match>
        <Class name="com.github.kyriosdata.add.api.ResolucaoController"/>
        <Bug pattern="SPRING_ENDPOINT" />
    </Match>

    <Match>
        <Class name="com.github.kyriosdata.add.api.SecurityConfig"/>
        <Bug pattern="SPRING_CSRF_PROTECTION_DISABLED" />
    </Match>



</FindBugsFilter>